<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp11.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp11"
    Shell.FlyoutBehavior="Disabled"
    Title="MauiApp11">

    <FlyoutItem >
        <ShellContent
    Title="Giriş"
        Icon="giris.png"
    ContentTemplate="{DataTemplate local:MainPage}"
    Route="MainPage" />


        <ShellContent
        Title="Kurlar"
        Icon="para.png"
        ContentTemplate="{DataTemplate local:Kurlar}"
        Route="Kurlar"/>

        <ShellContent
        Title="Haberler"
        Icon="haber.png"
        ContentTemplate="{DataTemplate local:Haberler}"
        Route="Haberler" />




        <ShellContent
        Title="Hava Durumu" 
        Icon="hava.png"
        ContentTemplate="{DataTemplate local:HavaDurumu}"
        Route="HavaDurumu" />

        <ShellContent
        Title="Yapılacaklar"
        Icon="yapilacaklar.png"
        ContentTemplate="{DataTemplate local:Yapilacaklar}"
        Route="Yapilacaklar" />

        <ShellContent
        Title="Ayarlar"
        Icon="ayarlar.png"
        ContentTemplate="{DataTemplate local:Ayarlar}"
        Route="Ayarlar" />

    </FlyoutItem>


</Shell>
